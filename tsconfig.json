{
  "compilerOptions": {
    "target": "ES2020",                   // Modern JS features
    "module": "esnext",                   // Use ES modules (import/export)
    "moduleResolution": "node",           // Resolve modules like Node.js
    "outDir": "./dist",                    // Output compiled JS
    "rootDir": "./src",                    // Source folder
    "strict": true,                        // Enable strict type checking
    "esModuleInterop": true,               // Allow import of CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule":true,
    "incremental": true,          // Enables incremental compilation
    "tsBuildInfoFile": "./dist/.tsbuildinfo" // Stores incremental info
  },
  "exclude": ["node_modules", "dist"]
}
